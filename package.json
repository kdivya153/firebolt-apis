{
  "name": "@firebolt-js/sdk",
  "version": "1.0.0-next-major.2",
  "description": "The Firebolt JS SDK",
  "main": "./dist/lib/firebolt.mjs",
  "types": "./dist/lib/firebolt.d.ts",
  "type": "module",
  "bin": {
    "firebolt-version": "./src/js/version.mjs"
  },
  "workspaces": [
    "src/sdks/core", "src/sdks/manage"
  ],
  "scripts": {
    "fs:setup": "npm run clean && mkdir -p dist",
    "validate:each": "npx firebolt-openrpc validate --input src/openrpc --schemas node_modules/@firebolt-js/schemas/src/schemas --schemas src/schemas --transformations",
    "validate:compiled": "npx firebolt-openrpc validate --input dist/firebolt-open-rpc.json && npm run validate --workspaces",
    "validate": "npm run validate:each && npm run validate:compiled ",
    "compile": "npx firebolt-openrpc openrpc --input src --template src/template/openrpc/template.json --output ./dist/firebolt-open-rpc.json --schemas src/schemas --schemas node_modules/@firebolt-js/schemas/src/schemas",
    "slice": "npm run slice --workspaces",
    "sdks": "npm run sdk --workspaces",
    "declarations": "npm run declarations --workspaces",
    "docs": "npm run docs --workspaces",
    "wiki": "npm run wiki --workspaces",
    "test": "npm run test --workspaces",
    "clean": "rm -rf dist && npm run clean --workspaces",
    "dist": "npm run compile && npm run version && npm run dist --workspaces",
    "version": "node ./src/js/version.mjs sync",
    "publish:docs": "npm run docs && sh push-docs.sh",
    "publish:word": "mkdir -p dist/word/schemas && find dist/docs -iname \"*.md\" -type f -exec sh -c 'export fn=`basename ${0}` && pandoc \"${0}\" -o \"dist/word/${fn%.md}.docx\"' {} \\;",
    "prepare": "husky install && npm run fs:setup",
    "prepack": "npm run fs:setup && npm run dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rdkcentral/firebolt-core-sdk"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/rdkcentral/firebolt-core-sdk/issues"
  },
  "homepage": "https://github.com/rdkcentral/firebolt-core-sdk#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@firebolt-js/openrpc": "../firebolt-openrpc",
    "@firebolt-js/schemas": "^0.5.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "ajv": "^6.12.6",
    "husky": "^8.0.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.3",
    "semantic-release": "^19.0.5",
    "typescript": "^4.6.4"
  },
  "keywords": [
    "firebolt",
    "apps",
    "sdk"
  ],
  "license": "Apache-2.0"
}
