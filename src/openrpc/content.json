        ],
        "params": [
          {
            "name": "provider",
            "summary": "The id of the provider that has the entity info",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "name": "parameters",
            "summary": "The content parameters",
            "schema": {
              "$ref": "#/components/schemas/EntityInfoParameters"
            },
            "required": true
          },
          {
            "name": "options",
