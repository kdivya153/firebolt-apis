        "name": "search",
        "summary": "Searches a content provider with a given query",
        "tags": [
          {
            "name": "capabilities",
            "x-uses": [
              "xrn:firebolt:capability:discovery:search"
            ]
          }
        ],
        "params": [
          {
            "name": "provider",
            "summary": "The id of the provider to search",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "name": "parameters",
            "summary": "The search parameters",
            "schema": {
              "$ref": "#/components/schemas/SearchParameters"
            },
            "required": true
          },
          {
            "name": "options",
            "summary": "Any options with making the request to provider",
            "schema": {
              "$ref": "#/components/schemas/FederationOptions"
            },
            "required": false
          }
        ],
        "result": {
          "name": "content",
          "summary": "The search results",
          "schema": {
            "$ref": "#/components/schemas/ProvidedSearchResult"
          }
        },
        "examples": [
          {
            "name": "Search a provider for some content given a query",
            "params": [
              {
                "name": "provider",
                "value": "Vudu"
              },
              {
                "name": "parameters",
                "value": {
                  "query": "Comedy",
                  "limit": 20,
                  "context": {
                    "source": "voice"
                  }
                }
              },
              {
                "name": "options",
                "value": {
                  "timeout": 10000
                }
              }
            ],
            "result": {
              "name": "Default Result",
              "value": {
                "provider": "Vudu",
                "data": {
