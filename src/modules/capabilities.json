{
    "openrpc": "1.2.4",
    "info": {
      "title": "Capabilities",
      "description": "The Capabilities module provides information about which discreet unit of functionality is enabled for the apps.",
      "version": "0.0.0"
    },
    "methods": [
      {
        "name": "endpoint",
        "summary": "Get the endpoint for a Firebolt Cloud Extension",
        "tags": [
          {
            "name": "capabilities",
            "x-uses": [
              "xrn:firebolt:capability:capabilities:extensions"
            ]
          }
        ],
        "params": [
          {
            "name": "id",
            "summary": "Cloud Extension ID",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "result": {
          "name": "endpoint",
          "summary": "the endpoint for the specified Cloud Extension",
          "schema": {
            "type": "string"
          }
        },
        "examples": [
          {
            "name": "Get the Firebolt Commerce Cloud Extension endpoint url.",
            "params": [
              {
                "name": "id",
                "value": "https://meta.rdkcentral.com/firebolt/extension-sdk/commerce"
              }
            ],
            "result": {
              "name": "endpoint",
              "value": "http://localhost"
            }
          }
        ]
      }
    ],
    "components": {
      "schemas": {
      }
    }
  }
  